{
    "name": "linuxforphp/linuxforcomposer",
    "description": "A Composer interface to run 'Linux for PHP' Docker containers, Dockerfiles or docker-compose files.",
    "single": {
        "image": {
            "linuxforcomposer": {
                "php-versions": [
                    "7.4"
                ],
                "script": [
                    "composer self-update",
                    "/srv/tempo/wwwflarelinux/data/lfphpdevuser.bash",
                    "cd /srv/tempo/wwwflarelinux",
                    "chmod -R 777 cache/ logs/ templates_c/",
                    "composer update",
                    "cp -f config/config.local.php.dist config/config.local.php",
                    "sed -i 's/USERNAME/fwuser/g' config/config.local.php",
                    "sed -i 's/PASSWORD/testpass/g' config/config.local.php",
                    "sed -i 's/DATABASE/fw/g' config/config.local.php",
                    "sed -i 's/flarelinux.xyz/IPADDRESS/g' config/session.config.php",
                    "cd /srv",
                    "mv www www.OLD",
                    "ln -s tempo/wwwflarelinux/public www",
                    "/etc/init.d/mysql start",
                    "sleep 5",
                    "mysql -uroot -e \"CREATE DATABASE fw;\"",
                    "mysql -uroot -e \"CREATE USER 'fwuser'@'localhost' IDENTIFIED BY 'testpass';\"",
                    "mysql -uroot -e \"GRANT ALL PRIVILEGES ON fw.* TO 'fwuser'@'localhost'\"",
                    "mysql -uroot fw < /srv/tempo/wwwflarelinux/data/db_schema.sql",
                    "mysql -uroot fw < /srv/tempo/wwwflarelinux/data/db_data.sql",
                    "/etc/init.d/mysql stop",
                    "sleep 5",
                    "lfphp --mysql --phpfpm --apache"
                ],
                "thread-safe": "false"
            },
            "dockerfile": {
                "url": "",
                "container-name": "",
                "username": "",
                "token": ""
            }
        },
        "containers": {
            "modes": {
                "mode1": "detached",
                "mode2": "interactive",
                "mode3": "tty"
            },
            "ports": {
                "port1": [
                    "8181:80"
                ]
            },
            "volumes": {
                "volume1": "${PWD}/:/srv/tempo/wwwflarelinux"
            },
            "persist-data": {
                "mount": "false",
                "root-name": "",
                "directories": {
                    "directory1": "",
                    "directory2": "",
                    "directory3": ""
                }
            }
        }
    },
    "docker-compose": {
        "url": "",
        "username": "",
        "token": ""
    },
    "lfphp-cloud": {
        "account": "",
        "username": "",
        "token": ""
    }
}
